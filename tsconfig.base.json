{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@domains/feature-database": ["domains/feature-database/src/index.ts"],
      "@rfm/dexie-database": ["libs/dexie-database/src/index.ts"],
      "@rfm/static": ["libs/static/src/index.ts"],
      "@rfm/ui-club-detail": ["libs/ui-club-detail/src/index.ts"],
      "@rfm/ui-components": ["libs/ui-components/src/index.ts"],
      "@rfm/ui-landing": ["libs/ui-landing/src/index.ts"],
      "@rfm/ui-player-detail": ["libs/ui-player-detail/src/index.ts"],
      "@rfm/utility-common": ["libs/utility-common/src/index.ts"],
      "@rfm/utility-data-generators": [
        "libs/utility-data-generators/src/index.ts"
      ],
      "@rfm/utility-factories": ["libs/utility-factories/src/index.ts"],
      "@rfm/utility-id-generator": ["libs/utility-id-generator/src/index.ts"],
      "@rfm/utility-interfaces": ["libs/utility-interfaces/src/index.ts"],
      "@rfm/utility-seeders": ["libs/utility-seeders/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
